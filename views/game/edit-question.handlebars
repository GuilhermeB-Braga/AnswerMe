<main>

    <h1 class="title">Editar questão</h1>

    <form class="form" action="/game/edit/question" method="post">

        <input type="hidden" name="quiz" value="{{quiz._id}}">

        <input type="hidden" name="id" value="{{question._id}}">

        <div class="inputWrapper">

            <label for="question">Pergunta:</label>

            <textarea name="question" id="question"> {{question.question}} </textarea>
            
        </div>

        <div class="inputWrapper">

            <label for="questionImage">Imagem: <span>opcional</span></label>

            <input type="url" name="questionImage" id="questionImage" placeholder="Insira a URL de sua imagem." value="{{question.questionImage}}">
            
        </div>

        <div class="wrapper">

            <h3>Alternativas:</h3>
            <p>Selecione a alternativa correta.</p>
            
        </div>
        
        <ul>
 
            <li>

                <input type="radio" name="answer" id="answerA" value="a" required>
                <label for="answerA" class="customLabel"></label>

                <div class="inputWrapper">

                    <textarea name="a" id="a">{{question.alternative_a}}</textarea>
                    
                </div>
                
            </li>
        
            <li>

                <input type="radio" name="answer" id="answerB" value="b">
                <label for="answerB" class="customLabel"></label>

                <div class="inputWrapper">

                    <textarea name="b" id="b">{{question.alternative_b}}</textarea>
                    
                </div>
                
            </li>

            <li>

                <input type="radio" name="answer" id="answerC" value="c">
                <label for="answerC" class="customLabel"></label>

                <div class="inputWrapper">

                    <textarea name="c" id="c">{{question.alternative_c}}</textarea>
                    
                </div>
                
            </li>

            <li>

                
                <input type="radio" name="answer" id="answerD" value="d">
                <label for="answerD" class="customLabel"></label>

                <div class="inputWrapper">

                    <textarea name="d" id="d">{{question.alternative_d}}</textarea>
                    
                </div>
                
            </li>

            
        </ul>

        <button class="btn btn-create" type="submit">Salvar alterações</button>
        
    </form>

</main>